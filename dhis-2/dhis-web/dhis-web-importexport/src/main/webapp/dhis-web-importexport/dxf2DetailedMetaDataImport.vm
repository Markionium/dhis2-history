    <form id="importForm" name="importForm" method="post" enctype="multipart/form-data" action="importDetailedMetaData.action">
        <table>
            <col width="140">
            <col>
            <tr>
                <td>$i18n.getString( "file" )</td>
                <td><input type="file" id="upload" name="upload" style="margin-left:0px"></td>
            </tr>
        </table>
    </form>
</div>
