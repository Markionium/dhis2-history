<script>
    jQuery( function ()
    {
        processMetaDataFile();
    } );

    // Process the uploaded MetaData file
    function processMetaDataFile()
    {
        $( "#upload" ).change( function ()
        {
            $( "#importForm" ).submit();
        } );
    }
</script>
