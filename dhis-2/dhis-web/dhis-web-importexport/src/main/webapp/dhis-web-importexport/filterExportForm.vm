<h3>$i18n.getString( "save_filter" )</h3>

<form id="saveFilter" name="saveFilter" action="addDataSet.action" method="post">
    <table id="detailsList" style="width: 540px;">
        <col/> ## Labels
        <col/> ## Input
        <thead>
        <tr>
            <th colspan="2">$i18n.getString( "filter_details" )</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                <label>$i18n.getString( "name" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label>
            </td>
            <td>
                <input type="text" id="name" name="name" value="$filter.name" style="width: 90%;" onchange="nameChanged()">
            </td>
        </tr>
        <tr>
            <td>
                <label>$i18n.getString( "code" )</label>
            </td>
            <td>
                <input type="text" id="code" name="code" value="$filter.code" style="width: 90%;">
            </td>
        </tr>
        <tr>
            <td><label>$i18n.getString( "filter_metaData_uids" )</label></td>
            <td><textarea id="filterMetaDataUids" name="filterMetaDataUids" rows="10" cols="63">$filter.metaDataUids</textarea></td>
        </tr>
        <tr>
            <td colspan="3">
                <input type="submit" value="$i18n.getString( 'save' )" style="width:120px" />
            </td>
        </tr>
        </tbody>
    </table>
</form>