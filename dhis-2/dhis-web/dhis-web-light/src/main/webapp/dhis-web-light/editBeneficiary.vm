
<h2>Edit Beneficiary</h2>

<form method="post" action="updateBeneficiary.action">
	<div class="header-box" align="center">
		<p style="text-align: left;">
		
			<input type="hidden" name="organisationUnitId" value="$organisationUnitId" />
			
			<input type="hidden" name="patientId" value="$patientId" />
		
	    	<label>Date of Registration (yyyy-MM-dd)</label>
	    	<input type="text" maxlength="255" size="24" name="registrationDate" value="$registrationDate" />
	    	
	    	<label>Full Name</label>	
	    	<input type="text" maxlength="255" size="24" name="fullName" value="$patient.getFullName()" />
	    	
	    	<label>Gender</label>
	    	<br />    	
	    	<select name="gender">
	    		<option value="please_select">[Please select]</option>
	    		
	    		#if ($patient.getGender() == "M")
				<option value="M" selected="selected">Male</option>
				#else
				<option value="M">Male</option>
				#end
				
				#if ($patient.getGender() == "F")
				<option value="F" selected="selected">Female</option>
				#else
				<option value="F">Female</option>
				#end
				
				#if ($patient.getGender() == "T")
				<option value="T" selected="selected">Transgender</option>
				#else
				<option value="T">Transgender</option>
				#end
				
			</select>
			
			<br />
			
			<label>DOB Type</label>
			<br />
			<select name="dobType">
				<option value="p">[Please select]</option>
				
				#if ($patient.getDobType() == "V")
				<option value="V" selected="selected">Verified</option>
				#else
				<option value="V">Verified</option>
				#end
				
				#if ($patient.getDobType() == "D")
				<option value="D" selected="selected">Declared</option>
				#else
				<option value="D">Declared</option>
				#end
				
			</select>
			
			<br />
			
			<label>Date of Birth (yyyy-MM-dd)</label>
			<input type="text" maxlength="255" size="24" name="birthDate" value="$birthDate" />
			
			<label>Blood Group</label>
			<br />
			<select name="bloodGroup">
				<option value="please_select">[Please select]</option>
				
				#if ($patient.getBloodGroup() == "A+")
				<option value="A+" selected="selected">A+</option>
				#else
				<option value="A+">A+</option>
				#end
				
				#if ($patient.getBloodGroup() == "A-")
				<option value="A-" selected="selected">A-</option>
				#else
				<option value="A-">A-</option>
				#end
				
				#if ($patient.getBloodGroup() == "AB+")
				<option value="AB+" selected="selected">AB+</option>
				# else
				<option value="AB+">AB+</option>
				#end
				
				#if ($patient.getBloodGroup() == "AB-")
				<option value="AB-" selected="selected">AB-</option>
				#else
				<option value="AB-">AB-</option>
				#end
				
				#if ($patient.getBloodGroup() == "B+")
				<option value="B+" selected="selected">B+</option>
				#else
				<option value="B+">B+</option>
				#end
				
				#if ($patient.getBloodGroup() == "B-")
				<option value="B-" selected="selected">B-</option>
				#else
				<option value="B-">B-</option>
				#end
				
				#if ($patient.getBloodGroup() == "O+")
				<option value="O+" selected="selected">O+</option>
				#else
				<option value="O+">O+</option>
				#end
				
				#if ($patient.getBloodGroup() == "O-")
				<option value="O-" selected="selected">O-</option>
				#else
				<option value="O-">O-</option>
				#end
				
			</select>
			
			<br />
			
			<input type="submit" value="Submit" />
	    </p>
	</div>
</form>

<div id="footer">
<h2>$i18n.getString( "navigate_to" )</h2>
<ul>
	<li><a href="index.action">$i18n.getString("home")</a></li>
</ul>
</div>
