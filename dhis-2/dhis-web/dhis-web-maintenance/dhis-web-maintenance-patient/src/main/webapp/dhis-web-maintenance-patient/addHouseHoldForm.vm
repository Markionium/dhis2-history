
<h3>$i18n.getString( "add_new_household" )</h3>
																					
<form id="addHouseHoldForm" action="addHouseHold.action" method="post" onsubmit="return validateAddHouseHold()">

<table>	
	<tr>
		<td><label for="houseNumber">$i18n.getString( "house_number" ) <em title="$i18n.getString( "required" )" class="required">*</em></label></td>
		<td><input type="text" readonly="readonly" id="houseNumber" name="houseNumber" value="$encoder.htmlEncode( $houseNumber )" style="width:30em"></td>
	</tr>	
	<tr><td>&nbsp;</td></tr>	
	<tr>
		<td><label for="address">$i18n.getString( "address" ) <em title="$i18n.getString( "required" )" class="required">*</em></label></td>
		<td><input type="text" id="address" name="address" maxlength="30" style="width:30em"></td>
	</tr>
	<tr>
		<td><label for="landMark">$i18n.getString( "land_mark" ) <em title="$i18n.getString( "required" )" class="required">*</em></label></td>
		<td><input type="text" id="landMark" name="landMark" maxlength="30" style="width:30em"></td>
	</tr>	
  	  	
</table>

<p>
	<input type="submit" value="$i18n.getString( "add" )" style="width:10em">
	<input type="button" value="$i18n.getString( "cancel" )" onclick="window.location.href='household.action'" style="width:10em">
</p>

</form> 	

<span id="message"></span>

<script type="text/javascript">
	
	var addressField = document.getElementById( 'address' );
	addressField.select();
	addressField.focus();

</script>		